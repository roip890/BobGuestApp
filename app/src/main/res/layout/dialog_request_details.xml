<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_details_dialog_main_container_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="centerInside">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/request_details_dialog_layout">

        <TextView
            android:id="@+id/request_details_dialog_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/request_details_dialog_status_text_view_margin"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/request_details_dialog_status_view"
            android:layout_width="@dimen/request_details_dialog_status_view_width"
            android:layout_height="@dimen/request_details_dialog_status_view_height"
            android:layout_margin="@dimen/request_details_dialog_status_view_margin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</FrameLayout>
