<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/code_details_dialog_main_container_frame_layout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:scaleType="centerInside">

    <!--code details layout-->
    <RelativeLayout
        android:id="@+id/code_details_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:layout_margin="20dp"
            android:id="@+id/code_details_dialog_code_image_view" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code_details_dialog_code_image_view"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/code_details_dialog_code_text_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/code_details_dialog_code_title"
                android:layout_margin="2dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/code_details_dialog_code_text"
                android:layout_margin="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/code_details_dialog_code_title">
            </TextView>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
