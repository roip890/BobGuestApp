<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guest_request_notification_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/notification_list_item_icon_background_padding">

    <LinearLayout
        android:id="@+id/guest_request_notification_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/notification_list_item_icon_container_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guest_request_notification_icon"
            android:layout_width="@dimen/notification_list_item_icon_width"
            android:layout_height="@dimen/notification_list_item_icon_height"
            android:layout_margin="@dimen/notification_list_item_icon_margin" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/guest_request_notification_content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/guest_request_notification_icon_container"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/notification_list_item_content_container_margin"
        android:paddingEnd="@dimen/notification_list_item_content_container_end_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guest_request_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/notification_list_item_content_margin"
            android:textSize="@dimen/notification_list_item_content_text_size" />

        <TextView
            android:id="@+id/guest_request_notification_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/notification_list_item_content_margin"
            android:textSize="@dimen/notification_list_item_content_text_size" />

        <TextView
            android:id="@+id/guest_request_notification_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/notification_list_item_timestamp_margin"
            android:textSize="@dimen/notification_list_item_timestamp_text_size"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>