<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_activity_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--camera view-->
    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera_activity_header_camera_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:keepScreenOn="true"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cameraExperimental="true"
        app:cameraPlaySounds="true"
        app:cameraGrid="off"
        app:cameraFlash="off"
        app:cameraAudio="on"
        app:cameraGestureTap="focusWithMarker"
        app:cameraGestureLongTap="none"
        app:cameraGesturePinch="zoom"
        app:cameraGestureScrollHorizontal="exposureCorrection"
        app:cameraGestureScrollVertical="none"
        app:cameraPictureSizeAspectRatio="1:1"
        app:cameraVideoSizeAspectRatio="1:1"
        app:cameraMode="picture" />

    <!--cover view-->
    <View
        android:id="@+id/camera_activity_header_cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </View>


    <!--controls view-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_activity_controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_activity_header_camera_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/camera_activity_controls_flashlight_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/camera_activity_controls_image_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera_activity_controls_flashlight_button"
            app:layout_constraintEnd_toStartOf="@+id/camera_activity_controls_video_button"/>

        <ImageView
            android:id="@+id/camera_activity_controls_video_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/camera_activity_controls_image_button"
            app:layout_constraintEnd_toStartOf="@+id/camera_activity_controls_facing_button"/>

        <ImageView
            android:id="@+id/camera_activity_controls_facing_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
