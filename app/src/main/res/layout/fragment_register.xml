<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register_fragment_main_container_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="centerInside">

    <!--register layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_fragment_register_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <com.bob.uimodule.views.textviews.MyEditText
            android:id="@+id/register_fragment_register_username_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_username_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_username_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyEditText
            android:id="@+id/register_fragment_register_email_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_email_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_email_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_username_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyEditText
            android:id="@+id/register_fragment_register_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_password_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_password_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_email_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyEditText
            android:id="@+id/register_fragment_register_confirm_password_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_confirm_password_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_confirm_password_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_password_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyAutoCompleteEditText
            android:id="@+id/register_fragment_register_hotel_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_hotel_name_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_hotel_name_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_confirm_password_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyEditText
            android:id="@+id/register_fragment_register_full_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_full_name_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_full_name_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_hotel_name_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyPhoneEditText
            android:id="@+id/register_fragment_register_phone_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_phone_edit_text_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_phone_edit_text_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_full_name_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/register_fragment_register_error_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_error_text_view_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_error_text_view_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_phone_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.bob.uimodule.views.textviews.MyButton
            android:id="@+id/register_fragment_register_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/register_fragment_register_sign_up_button_margin_top"
            android:layout_marginBottom="@dimen/register_fragment_register_sign_up_button_margin_bottom"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toBottomOf="@+id/register_fragment_register_error_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
