<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guest_code_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/guest_code_list_item_icon_background_padding">

    <RelativeLayout
        android:id="@+id/guest_code_list_item_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/guest_code_list_item_icon_container_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guest_code_list_item_code_icon"
            android:layout_width="@dimen/guest_code_list_item_icon_width"
            android:layout_height="@dimen/guest_code_list_item_icon_height"
            android:layout_margin="@dimen/guest_code_list_item_icon_margin"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/guest_code_list_item_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/guest_code_list_item_icon_layout"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/guest_code_list_item_content_container_margin"
        android:paddingEnd="@dimen/guest_code_list_item_content_container_end_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guest_code_list_item_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/guest_code_list_item_title_margin"
            android:textSize="@dimen/guest_code_list_item_title_text_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/guest_code_list_item_code_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/guest_code_list_item_content_margin"
            android:textSize="@dimen/guest_code_list_item_content_text_size"
            android:layout_below="@+id/guest_code_list_item_code_title"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/guest_code_list_item_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/guest_code_list_item_indicators_container_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/guest_code_list_item_status_icon"
            android:layout_width="@dimen/guest_code_list_item_status_icon_width"
            android:layout_height="@dimen/guest_code_list_item_status_icon_height"
            android:layout_margin="@dimen/guest_code_list_item_status_icon_margin"/>

        <ImageView
            android:id="@+id/guest_code_list_item_more_details_button_icon"
            android:layout_width="@dimen/guest_code_list_item_details_icon_width"
            android:layout_height="@dimen/guest_code_list_item_details_icon_height"
            android:layout_margin="@dimen/guest_code_list_item_details_icon_margin"/>

    </RelativeLayout>

</RelativeLayout>