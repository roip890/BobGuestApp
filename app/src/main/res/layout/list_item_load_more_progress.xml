<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/request_icon_background"
    android:padding="@dimen/request_list_item_icon_background_padding">

    <LinearLayout
        android:id="@+id/load_more_progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/load_more_progress_container_margin"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/load_more_progress_progress_bar"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/load_more_progress_icon_width"
                android:layout_height="@dimen/load_more_progress_icon_height"
                android:layout_margin="@dimen/load_more_progress_icon_margin" />

            <ImageView
                android:id="@+id/load_more_progress_icon"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/load_more_progress_icon_width"
                android:layout_height="@dimen/load_more_progress_icon_height"
                android:layout_margin="@dimen/load_more_progress_icon_margin" />


        </FrameLayout>

        <TextView
            android:text="Loading..."
            android:id="@+id/load_more_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/load_more_progress_text_margin"
            android:textSize="@dimen/load_more_progress_text_size"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>