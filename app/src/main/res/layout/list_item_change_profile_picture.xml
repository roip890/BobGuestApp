<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/list_item_change_profile_picture_background"
    android:padding="@dimen/request_list_item_icon_background_padding"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

    <LinearLayout
        android:id="@+id/list_item_change_profile_picture_option_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/request_list_item_indicators_container_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_change_profile_picture_option_icon"
            android:layout_gravity="center"
            android:layout_width="@dimen/request_list_item_status_icon_width"
            android:layout_height="@dimen/request_list_item_status_icon_height"
            android:layout_margin="@dimen/request_list_item_status_icon_margin" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_change_profile_picture_option_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/list_item_change_profile_picture_option_icon_container"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/request_list_item_icon_container_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_change_profile_picture_option_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/request_list_item_title_margin"
            android:textSize="@dimen/request_list_item_title_text_size"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>

    </LinearLayout>


</RelativeLayout>