<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_bucket_list_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:foreground="?selectableItemBackground"
    tools:ignore="KeyboardInaccessibleWidget,UnusedAttribute">

    <ImageView
        android:id="@+id/media_bucket_list_item_image_view"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/media_bucket_list_item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/media_bucket_list_item_image_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>