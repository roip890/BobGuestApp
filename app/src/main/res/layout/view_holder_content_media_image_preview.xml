<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_media_image_preview_view_holder_cropper_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_collapseMode="none">

    <com.bob.uimodule.image.imageview.TouchImageView
        android:id="@+id/content_media_image_preview_view_holder_cropper_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/light_primary_color"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:zoom_enabled="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>
