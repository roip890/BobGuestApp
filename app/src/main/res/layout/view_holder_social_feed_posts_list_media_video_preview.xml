<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/social_feed_posts_list_media_video_view_holder_player_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:resize_mode="fit"
        app:surface_type="texture_view"
        app:use_controller="true"
        app:controller_layout_id="@layout/exo_player_custom_controls_layout"/>

    <ImageButton
        android:id="@+id/social_feed_posts_list_media_video_view_holder_player_start_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        app:layout_constraintStart_toStartOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        app:layout_constraintTop_toTopOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        app:layout_constraintBottom_toBottomOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        android:src="@drawable/exo_controls_play"/>

    <LinearLayout
        android:id="@+id/social_feed_posts_list_media_video_view_holder_player_debug_view"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        app:layout_constraintStart_toStartOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        app:layout_constraintTop_toTopOf="@+id/social_feed_posts_list_media_video_view_holder_player_view"
        android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
