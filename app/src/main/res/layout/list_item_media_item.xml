<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_gallery_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/media_gallery_item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/media_gallery_item_checked_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="@+id/media_gallery_item_image"
        app:layout_constraintTop_toTopOf="@+id/media_gallery_item_image"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        android:elevation="8dp"/>

    <ImageButton
        android:id="@+id/media_gallery_item_media_type_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/media_gallery_item_image"
        app:layout_constraintBottom_toBottomOf="@+id/media_gallery_item_image"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        android:elevation="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>