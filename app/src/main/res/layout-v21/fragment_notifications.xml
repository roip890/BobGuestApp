<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notifications_fragment_main_container_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--notifications layout-->
    <RelativeLayout
        android:id="@+id/notifications_fragment_notifications_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/notifications_fragment_notifications_list_recycler_view_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <com.bob.bobguestapp.tools.recyclerview.MyRecyclerView
                android:id="@+id/notifications_fragment_notifications_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </RelativeLayout>

</FrameLayout>
